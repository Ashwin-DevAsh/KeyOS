        <Preference
            android:key="github"
            android:title="GitHub"
            android:summary="@string/github_url"/>

        <Preference
            android:key="based_on"
            android:title="@string/based_on"
            android:summary="@string/lawnchair_url" />
    </ch.deletescape.lawnchair.preferences.StyledPreferenceCategory>

</android.support.v7.preference.PreferenceScreen>