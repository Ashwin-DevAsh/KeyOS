                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_centerInParent="true"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_width="wrap_content"
                          android:text=""
                          android:textSize="14dp"
                          android:layout_marginRight="20dp"
                          android:layout_height="wrap_content"/>
