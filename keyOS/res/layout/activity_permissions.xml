<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/appBar"
        app:cardElevation="0dp"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false"
                android:text="Permissions"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="50dp"
                android:padding="12dp"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/back"
                android:id="@+id/back"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/mainContent"
        android:layout_below="@id/appBar"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scroller"
            android:scrollbars="none"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_marginTop="20dp"-->
<!--                     android:layout_marginBottom="40dp"-->
<!--                    android:gravity="center"-->
<!--                    android:textSize="35dp"-->
<!--                    android:text="Permissions"-->
<!--                    android:textColor="@android:color/black"-->
<!--                    android:id="@+id/paymentText"-->
<!--                    android:layout_height="wrap_content"/>-->
                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    app:columnCount="2"
                    app:alignmentMode="alignMargins"
                    app:columnOrderPreserved="false"
                    android:paddingBottom="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        app:cardElevation="0dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:cardCornerRadius="10dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:id="@+id/usage"
                        android:layout_height="170dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_marginBottom="40dp"
                                app:srcCompat="@drawable/usage"
                                android:layout_marginTop="20dp"
                                android:padding="30dp"
                                app:tint="#827717"
                                android:id="@id/icon"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="High"
                                android:textStyle="bold"
                                android:id="@+id/usageBadge"
                                android:textSize="12dp"
                                android:paddingHorizontal="10dp"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:background="@android:color/holo_red_light"
                                android:layout_marginTop="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_height="20dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text="Usage Access"
                                />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        app:cardElevation="0dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:cardCornerRadius="10dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:id="@+id/accessablity"
                        android:layout_height="170dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_marginBottom="40dp"
                                app:srcCompat="@drawable/accessablity"
                                android:layout_marginTop="20dp"
                                android:padding="30dp"
                                android:id="@id/icon"
                                app:tint="#9C27B0"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="High"
                                android:textStyle="bold"
                                android:textSize="12dp"
                                android:id="@+id/accessablityBadge"
                                android:paddingHorizontal="10dp"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:background="@android:color/holo_red_light"
                                android:layout_marginTop="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text="Accessibility"
                                />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:id="@+id/overlay"
                        android:layout_height="170dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_marginBottom="40dp"
                                app:srcCompat="@drawable/overlay"
                                android:layout_marginTop="20dp"
                                android:padding="35dp"
                                android:id="@id/icon"
                                app:tint="#006064"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="High"
                                android:textStyle="bold"
                                android:id="@+id/overlayBadge"
                                android:textSize="12dp"
                                android:paddingHorizontal="10dp"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:background="@android:color/holo_red_light"
                                android:layout_marginTop="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_height="20dp"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text="Overlay"
                                />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:id="@+id/write"
                        android:layout_height="170dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_marginBottom="40dp"
                                app:srcCompat="@drawable/write_settings"
                                android:layout_marginTop="20dp"
                                android:padding="30dp"
                                app:tint="@android:color/holo_blue_light"
                                android:id="@id/icon"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="High"
                                android:textStyle="bold"
                                android:id="@+id/writeBadge"
                                android:textSize="12dp"
                                android:paddingHorizontal="10dp"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:background="@android:color/holo_red_light"
                                android:layout_marginTop="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_height="20dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text="Write Settings"

                                 />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:id="@+id/admin"
                        android:layout_height="170dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_marginBottom="40dp"
                                app:srcCompat="@drawable/admin"
                                app:tint="#6566C8"
                                android:layout_marginTop="20dp"
                                android:padding="35dp"
                                android:id="@id/icon"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Medium"
                                android:textStyle="bold"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:id="@+id/adminBadge"
                                android:paddingHorizontal="10dp"
                                android:textColor="@android:color/white"
                                android:background="@android:color/holo_orange_dark"
                                android:layout_marginTop="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text="Admin"
                                />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:id="@+id/disableUsb"
                        android:layout_height="170dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_marginBottom="40dp"
                                app:srcCompat="@drawable/usb"
                                android:layout_marginTop="20dp"
                                android:padding="35dp"
                                android:id="@id/icon"
                                app:tint="#01579b"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Medium"
                                android:textStyle="bold"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:id="@+id/disableUsbBadge"
                                android:paddingHorizontal="10dp"
                                android:textColor="@android:color/white"
                                android:background="@android:color/holo_orange_dark"
                                android:layout_marginTop="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text="USB Debugging"
                                 />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:id="@+id/other"
                        android:layout_height="170dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_marginBottom="40dp"
                                app:srcCompat="@drawable/contact"
                                android:layout_marginTop="20dp"
                                android:padding="35dp"
                                android:id="@id/icon"
                                app:tint="#33691e"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Medium"
                                android:textStyle="bold"
                                android:textSize="12dp"
                                android:id="@+id/otherBadge"
                                android:gravity="center"
                                android:paddingHorizontal="10dp"
                                android:textColor="@android:color/white"
                                android:background="@android:color/holo_orange_dark"
                                android:layout_marginTop="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text="Other"
                                />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.gridlayout.widget.GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        app:cardElevation="10dp"
        android:background="?android:attr/windowBackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:translationZ="200dp"
            app:elevation="200dp"
            android:elevation="200dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:orientation="vertical"
                android:translationZ="200dp"
                app:elevation="200dp"
                android:elevation="200dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Deny"
                        android:gravity="center"
                        android:id="@+id/deny"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_height="match_parent"/>

                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="30dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginVertical="12dp"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Allow"
                        android:id="@+id/allow"
                        android:gravity="center"
                        android:background="@color/buttonColor"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>