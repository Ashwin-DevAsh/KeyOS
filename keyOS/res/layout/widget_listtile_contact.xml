<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_gravity="center"
    android:layout_height="70.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="70dp"
            android:gravity="center"
            android:id="@+id/statusContainer"
            android:layout_marginLeft="10dp"
            android:layout_height="70dp">

            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22.5dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="invisible" />

                    <RelativeLayout
                        android:id="@+id/badgeContainer"
                        android:layout_width="45dp"
                        android:layout_height="45dp">

                        <TextView
                            android:id="@+id/badge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="0dp"
                            android:background="@color/green"
                            android:gravity="center"
                            android:text="A"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </FrameLayout>

            </androidx.cardview.widget.CardView>


            <net.igenius.customcheckbox.CustomCheckBox
                android:id="@+id/checkBox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                app:small_tick="true"
                android:layout_marginRight="5dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.857"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.937" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/statusContainer"
            android:text="Ashwin"
            android:layout_marginRight="30dp"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:gravity="bottom"
            android:id="@+id/name"
            android:singleLine="true"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/statusContainer"
            android:text="March 10 , 10:25 AM"
            android:textSize="11dp"
            android:gravity="top"
            android:id="@+id/number"
            android:layout_below="@id/name"
            android:layout_height="wrap_content"/>


        <androidx.cardview.widget.CardView
            android:layout_width="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="10dp"
            android:foregroundGravity="center"
            app:cardElevation="0dp"
            android:layout_height="20dp">
            <ImageView
                app:tint="@android:color/darker_gray"
                android:layout_width="20dp"
                app:srcCompat="@drawable/ios_forward"
                android:layout_height="20dp"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="15dp"
            android:layout_height="0.5dp"/>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:focusable="true"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#15d6552e"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:background="#10000000"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</LinearLayout>