<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/appBar"
        android:layout_height="65dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_marginLeft="80dp"
                android:textSize="20dp"
                android:textAllCaps="true"
                android:id="@+id/heading"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false"
                android:text="PHONE calls"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="50dp"
                android:padding="12dp"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/back"
                android:id="@+id/back"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scroller"
        android:scrollbars="none"
        android:layout_below="@id/appBar"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:paddingHorizontal="15dp"
                android:layout_height="50dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_marginLeft="10dp"
                    app:cardElevation="0dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    app:cardCornerRadius="17.5dp"
                    android:layout_height="35dp">

                    <ImageView
                        app:srcCompat="@drawable/outgoing_calls"
                        android:padding="7dp"
                        app:tint="#F69705"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ImageView>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Phone Calls"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="65dp"
                    android:textSize="16dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <com.suke.widget.SwitchButton
                        android:id="@+id/allowCalls"
                        app:sb_checked="true"
                        app:sb_show_indicator="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/options"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:paddingTop="10dp"
                            android:text="Incoming &amp; outgoing"
                            android:textAllCaps="true"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/edit_text" />
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            app:cardCornerRadius="17.5dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                app:srcCompat="@drawable/incoming_call"
                                app:tint="#4CAF50"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="65dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Incoming"
                                android:textColor="@android:color/black"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:text="Allow all incoming calls"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true">

                            <com.suke.widget.SwitchButton
                                android:id="@+id/allowIncoming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:sb_show_indicator="false" />
                        </LinearLayout>


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"

                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            app:cardCornerRadius="17.5dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                app:srcCompat="@drawable/outgoing_call"
                                app:tint="#0979F2"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="65dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Outgoing"
                                android:textColor="@android:color/black"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:text="Allow all outgoing calls"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true">

                            <com.suke.widget.SwitchButton
                                android:id="@+id/allowOutgoing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:sb_show_indicator="false" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/phoneCall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:paddingTop="10dp"
                            android:text="Whitelist &amp; blacklist"
                            android:textAllCaps="true"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/edit_text" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/whitelist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            app:cardCornerRadius="17.5dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                app:srcCompat="@drawable/whitelist_calls"
                                app:tint="#fc8210"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="65dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Whitelist Contacts"
                                android:textColor="@android:color/black"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:layout_width="20dp"
                                app:srcCompat="@drawable/ios_forward"
                                android:layout_height="20dp"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"

                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp" />


                    <RelativeLayout
                        android:id="@+id/blacklist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            app:cardCornerRadius="17.5dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                app:srcCompat="@drawable/blocklist_calls"
                                app:tint="#ec0101"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="65dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Blacklist Contacts"

                                android:textColor="@android:color/black"
                                android:textSize="16dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:layout_width="20dp"
                                app:srcCompat="@drawable/ios_forward"
                                android:layout_height="20dp"/>
                        </LinearLayout>
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:paddingTop="10dp"
                            android:text="Additional"
                            android:textAllCaps="true"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/edit_text" />
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            app:cardCornerRadius="17.5dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="6dp"
                                app:srcCompat="@drawable/contact_white"
                                app:tint="#03A9F4"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="65dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Automatic whitelist"
                                android:textColor="@android:color/black"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="90dp"
                                android:text="Allow calls if contact available in phone book"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true">

                            <com.suke.widget.SwitchButton
                                android:id="@+id/automaticWhitelist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:sb_show_indicator="false" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"/>

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        android:visibility="gone"
        app:cardElevation="10dp"
        android:background="?android:attr/windowBackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:translationZ="200dp"
            android:elevation="200dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:orientation="vertical"
                android:translationZ="200dp"
                android:elevation="200dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Cancel"
                        android:gravity="center"
                        android:id="@+id/cancel"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_height="match_parent"/>

                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="30dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginVertical="12dp"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Done"
                        android:id="@+id/done"
                        android:gravity="center"
                        android:background="@color/buttonColor"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>