<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_gravity="center"

    android:layout_height="100dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#333333"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="center"

            android:layout_height="match_parent">


            <ImageView
                android:layout_width="50dp"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:padding="14.5dp"
                app:tint="@color/light_white"
                android:tint="@color/light_white"
                android:id="@+id/editApp"
                app:srcCompat="@drawable/ios_forward"
                android:layout_height="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_toLeftOf="@id/editApp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/statusContainer"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:text="Ashwin"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/light_white"
                    android:textSize="18dp"
                    android:gravity="bottom"
                    android:id="@+id/name"
                    android:singleLine="true"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



            <LinearLayout
                android:layout_alignParentBottom="true"
                android:background="@drawable/edit_text"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:focusable="true"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
