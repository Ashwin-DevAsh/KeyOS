<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:minHeight="80.5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="25dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="30dp"

        android:foregroundGravity="center"
        app:cardElevation="0dp"
        android:layout_height="25dp">
        <net.igenius.customcheckbox.CustomCheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:stroke_width="10dp"
            app:color_unchecked_stroke="@android:color/darker_gray"
            android:id="@+id/checkbox"
            app:small_tick="true"
            app:color_checked="@color/green"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/statusContainer"
            android:layout_marginLeft="10dp"
            android:layout_height="70dp">

            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                app:cardElevation="0dp"
                android:layout_height="45dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/icon"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent"/>

                </FrameLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:id="@+id/editApp"
            app:tint="@color/Dark.Background"
            app:srcCompat="@drawable/app_edit"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/statusContainer"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:text="Ashwin"
                android:layout_marginRight="30dp"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:gravity="bottom"
                android:id="@+id/name"
                android:singleLine="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/statusContainer"
                android:text="March 10 , 10:25 AM"
                android:textSize="11dp"
                android:gravity="top"
                android:id="@+id/packageName"
                android:layout_below="@id/name"
                android:layout_height="wrap_content"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/edit_text"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:focusable="true"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</LinearLayout>